@model List<EmployeeTracking.Web.Models.Domain.Employee>
@{
}



<div class="container ">
    @if (Model != null && Model.Any())
	{
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-2">
					<h2 style="font-family: 'Kanit', sans-serif;" class="heading-section text-white">EMPLOYEES</h2>
				</div>
			</div>
		</div>
		<table class="table table-dark text-dark">
			<thead>
				<tr class="company-heading table-title">
					<th></th>
					<th>Employee Name</th>
					<th>Active Projects</th>
					<th>Operations</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var employee in Model)
				{
					<tr class="table-grown table-title">
						<td>
							<div class="img img-hover" style="background-image: url(@employee.ImgUrl);"></div>
						</td>
						<td>@employee.Name</td>
						<td>
							@foreach (var project in employee.Projects)
							{
								<span style="font-size:14px" class="badge tag text-white me-1">@project.Name</span>
							}
						</td>
						<td>
							<a type="button" asp-controller="ManagerEmployee" asp-action="Edit" asp-route-id="@employee.Id"><span aria-hidden="true"><i style="color:red" class="fa fa-edit ps-5"></i></span></a>

						</td>
					</tr>
				}

			</tbody>
		</table>
