@model EmployeeTracking.Web.Models.ViewModels.AddDepartmentRequest
@{

}

<div class="container-fluid py-5 text-center">
    <form method="post">


        <div class="row">
            <div class="col-md-12">
                <div class="card h-100 ">
                    <div class="text-center">
                        <h6 class="pt-5 text-primary" style="font-size:20px;">Department Details</h6>
                    </div>
                    <div class="card-body ">
                        <div class="row">
                            <div class="container-fluid text-center">
                                <div class="row text-center">
                                    <div class="">
                                        <div class="form-group">
                                            <label for="eMail">Name</label>
                                            <input type="text" id="name" asp-for="Name" class="form-control" id="eMail" placeholder="Enter Department Name">
                                        </div>
                                        <div class="">
                                            <div class="form-group">
                                                <label for="website">Image URL</label>
                                                <input type="url" class="form-control w-100" asp-for="ImgUrl" id="website" placeholder="Enter Image URL">
                                            </div>
                                        </div>
                                        <div class="w-100">
                                            <div class="form-group">
                                                <label for="website">Companies</label>
                                                <select class="form-select" asp-items="@Model.Projects" asp-for="SelectedProjects"></select>
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <button type="submit" class="btn btn-primary w-100">Save</button>
                                        </div>

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>


    </form>
</div>