@model EmployeeTracking.Web.Models.ViewModels.AddCompanyRequest
@{

}

<div class="container py-5">
    <form method="post">
        <div class="container">
            <div class="row gutters">

                

                <div class="">
                    <div class="card h-100 ">
                        <div class="text-center">
                            <h6 class="pt-5 text-primary" style="font-size:20px;">Company Details</h6>
                        </div>
                        <div class="card-body d-flex align-items-center">
                            <div class="row gutters">
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                    <div class="form-group">
                                        <label for="eMail">Name</label>
                                        <input type="text" id="name" asp-for="Name" class="form-control" id="eMail" placeholder="Enter Company Name">
                                    </div>
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                    <div class="form-group">
                                        <label for="note">Foundation Date</label>
                                        <input type="date"  class="form-control" id="foundationDate" asp-for="FoundationDate"/>
                                    </div>
                                </div>
                                <div class="w-100">
                                    <div class="form-group">
                                        <label for="website">Image URL</label>
                                        <input type="url" class="form-control w-100" asp-for="ImgUrl" id="website" placeholder="Enter Image URL" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="website">Projects</label>
                                            <select class="form-select" asp-items="@Model.Projects" asp-for="SelectedProjects"></select>
                                        </div>
                                       
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="website">Departments</label>
                                            <select class="form-select" asp-items="@Model.Departments" asp-for="SelectedDepartments"></select>
                                        </div>
                                    </div>
                                </div>

                                <div class="w-100">
                                    <div class="form-group">
                                        <label for="website">Employees</label>
                                        <select class="form-select" asp-items="@Model.Employees" asp-for="SelectedEmployees"></select>
                                    </div>
                                </div>
                                <div class="w-100">
                                </div>
                                <div class="mb-3">
                                    <button type="submit" class="btn btn-primary w-100">Save</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>



